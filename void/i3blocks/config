command=~/.config/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[time]
command=date +"%d %b %T"
interval=1
color=#ea6c73
#separator=true

[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=once
color=#f9af4f

[volume]
label=♪ 
command=~/.config/i3blocks/volume/volume
interval=once
signal=1
color=#91b362
#separator=false

[mediaplayer]
command=~/.config/i3blocks/mediaplayer/mediaplayer
instance=spotify
interval=once
signal=10

[backlight]
command=~/.config/i3blocks/backlight/backlight
label=☀
interval=once
STEP_SIZE=5
USE_SUDO=0
MIN_WIDTH=L100
color=#90e1c6

[ssid]
command=~/.config/i3blocks/ssid/ssid
INTERFACE=wlp2s0
interval=once
separator=false
color=#e6f2e9

[wifi]
command=~/.config/i3blocks/wifi/wifi
INTERFACE=wlp2s0
interval=once

[memory]
command=free -h | awk '/Mem:/ { printf("%5s/%s\n", $3, $2) }'
interval=15
separator=false
color=#fae994
